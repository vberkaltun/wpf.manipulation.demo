<UserControl
    x:Class="WPF.ManipulationDemo.Simple.Controls.TouchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.ManipulationDemo.Simple.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UC"
    mc:Ignorable="d">

    <Grid Width="{Binding ElementName=UC, Path=ActualWidth}" Height="{Binding ElementName=BasicRect, Path=ActualHeight}">
        <Border>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.7"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>

            <Rectangle
                Name="BasicRect"
                Fill="White"
                IsManipulationEnabled="True"
                RadiusX="50"
                RadiusY="50" />

        </Border>
    </Grid>
</UserControl>
